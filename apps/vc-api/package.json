    "uuid": "~8.3.0",
    "@sphereon/pex": "~1.1.0",
    "@nestjs/axios": "~0.0.8",
    "@nestjs/serve-static": "^3.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
